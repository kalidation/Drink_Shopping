<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorcardbackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:textColor="@color/textcolor"
        android:id="@+id/edit_text_order_comment"
        android:hint="Comment For this Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RadioButton
            android:checked="true"
            android:buttonTint="@color/tintcolor"
            android:textColor="@color/textcolor"
            android:id="@+id/radio_button_user_address"
            android:text="User Address"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:buttonTint="@color/tintcolor"
            android:textColor="@color/textcolor"
            android:id="@+id/radio_button_other_address"
            android:text="Other Address"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        
    </RadioGroup>

    <EditText
        android:layout_marginTop="10dp"
        android:textColor="@color/textcolor"
        android:enabled="false"
        android:id="@+id/edit_text_order_other_address"
        android:hint="Other Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method :"/>

    <RadioGroup
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:checked="true"
            android:buttonTint="@color/tintcolor"
            android:textColor="@color/textcolor"
            android:id="@+id/radio_button_COD"
            android:text="On delivery"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:buttonTint="@color/tintcolor"
            android:textColor="@color/textcolor"
            android:id="@+id/radio_button_credit_card"
            android:text="Credit Card"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </RadioGroup>

</LinearLayout>