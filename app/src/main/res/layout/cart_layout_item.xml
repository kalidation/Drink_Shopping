<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="8dp"
    app:cardCornerRadius="15dp"
    android:background="@color/colorcardbackground">



    <LinearLayout
        android:background="@drawable/recyclerradius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_cart_product"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/textcolor"
                android:id="@+id/txt_cart_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Mil The"/>

            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:id="@+id/txt_cart_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Mil The"/>


                <TextView
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:id="@+id/txt_cart_ice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Mil The"/>

                <TextView
                    android:textColor="@color/textcolor"
                    android:layout_weight="1"
                    android:id="@+id/txt_cart_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Mil The"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/textcolor"
                android:layout_weight="2"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:id="@+id/txt_cart_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Mil The"/>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:id="@+id/number_counter_cart"
                    android:layout_marginBottom="8sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    app:backGroundColor="@color/button"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="8sp"/>

             </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>