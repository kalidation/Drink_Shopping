<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorbackground">

    <LinearLayout
        android:background="@drawable/backgroundradius"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="2dp"
            android:id="@+id/img_cart_product"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/textcolor"
                android:text="MILK SHAKE"
                android:id="@+id/txt_cart_product_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_alignParentRight="true"
                    android:layout_width="75dp"
                    android:layout_height="30dp"
                    android:id="@+id/number_btn"
                    android:layout_marginBottom="18sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:backGroundColor="@color/button"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="8sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:background="@drawable/backgroundradius"
        android:id="@+id/edit_text_cart_comment"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comment"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="6dp"
        android:textColorHint="@color/textcolor"/>

    <ScrollView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/textcolor"
                    android:id="@+id/test"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Choose Size  *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/backgroundradius"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:id="@+id/radio_btn_sizeM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/textcolor"
                        android:text="Size M" />

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_sizeL"
                        android:text="Size L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RadioGroup>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/textcolor"
                        android:text="+$0"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"/>

                    <TextView
                        android:textSize="18sp"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/textcolor"
                        android:text="+$3"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/textcolor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Choose Sugar *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/backgroundradius"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_100"
                        android:text="100%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_70"
                        android:text="70%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_50"
                        android:text="50%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_30"
                        android:text="30%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_free"
                        android:text="free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RadioGroup>


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:text="Choose Ice *"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/backgroundradius"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_ice_100"
                        android:text="100%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_ice_70"
                        android:text="70%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_ice_50"
                        android:text="50%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_ice_30"
                        android:text="30%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:textColor="@color/textcolor"
                        android:buttonTint="@color/textcolor"
                        android:id="@+id/radio_btn_ice_free"
                        android:text="free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RadioGroup>

            </RelativeLayout>

            <TextView
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Topping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:background="@drawable/backgroundradius"
                android:id="@+id/RecyclerView_Topping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>